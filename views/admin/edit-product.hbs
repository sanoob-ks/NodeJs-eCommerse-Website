<section>
    <div class="container">
        <div class="col-md-6">
        <h2 class="text-center">Add product</h2>
        <form action="/admin/edit-product/{{proDetails._id}}" method="post" enctype="multipart/form-data">
        <label for="">Name</label>
        <input value="{{proDetails.Name}}" type="text" name="Name" id="" class="form-control">
        <label for="">Category</label>
        <input value="{{proDetails.Category}}" type="text" name="Category" id="" class="form-control">
        <label for="">Price</label>
        <input value="{{proDetails.Price}}" type="text" name="Price" id="" class="form-control">
        <label for="">Description</label>
        <input value="{{proDetails.Description}}" type="text" name="Description" id="" class="form-control">
        <label for="">Image</label>
        <img src="/product-images/{{proDetails._id}}.jpg" alt="" style="height: 8rem;width:6rem" class="p-3" id="imgView">
        <input type="file" name="image" class="form-control" id="" onchange="viewImage(event)">
        <button class="btn btn-success mt-4" type="submit">Submit</button>
        </form>
    </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>