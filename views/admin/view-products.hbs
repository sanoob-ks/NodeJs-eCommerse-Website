<section>
    <div class="container">
        <div class="row mt-5">
            <a href="admin/add-product" class="btn btn-success">Add product</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    {{!-- <th scope="col">#</th> --}}
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    {{!-- <th scope="row">{{i}}</th> --}}
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>Rs.{{this.Price}}</td>
                    <td><img style="height: 50px; width: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>

                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>