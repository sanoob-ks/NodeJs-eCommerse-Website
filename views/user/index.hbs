
<section>
    <div class="container mt-5 pl-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3">
                <div class="card mt-5" style="width: 15rem; height: 27rem;">
                    <img src="/product-images/{{this._id}}.jpg"
                        class="card-img-top" alt="..." style="width: 220px; height: 25rem;" >
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p>Rs. {{this.Price}}</p>
                        <p class="card-text">{{this.Description}}</p>
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                    </div>
                </div>

            </div>
            {{/each}}
    
            
            
            

        </div>
    </div>
</section>